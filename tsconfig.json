{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./src",
    "outDir": "./lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "sourceMap": false,
    "declaration": false,
    "experimentalDecorators": false,
    "removeComments": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
